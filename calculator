    <div align="center">

    <h1>Cálculos OFM</h1>

    <h1>Diâmetro</h1><input id= "input" type= "number" placeholder="0" step="0.01" min="0" max="999999" oninput="myFunction()">

    <h1>Interferência</h1><input id= "outroInput" type= "number" placeholder="0" step="0.01" min="0" max="999999" oninput="myScript()">

    <p id="demo1"></p>

    <p id="demo2"></p>

    <button id="butao" onclick="essaFunction()">Calcular</button>

    <p id="demo"></p>


<script>

function myFunction() {
  var aDilatar = document.getElementById("input").value;
  document.getElementById("demo1").innerHTML = "Diamêtro encontrado: " + aDilatar;
}
function myScript() {
  var interferencia = document.getElementById("outroInput").value;
  document.getElementById("demo2").innerHTML = "Interferência encontrada: " + interferencia;
}
function essaFunction() {
    //números do input
        var aDilatar = document.getElementById("input").value*1;
        var interferencia = document.getElementById("outroInput").value*1;
    //números fixos
        const folgaMontagem = aDilatar /1000;
        const alfa = 0.000011454;
        const deltaT = ((interferencia + folgaMontagem) /aDilatar) / alfa;
        const ta = 20;
        const deltaP = 28;
        var temperatura = deltaT + deltaP + ta;

    document.getElementById("demo").innerHTML = "Temperatura de aquecimento: " + Math.round(temperatura +1);
    console.log(aDilatar + interferencia)
    console.log(temperatura)
}

</script>

